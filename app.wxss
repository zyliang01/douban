/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.header{
    background-color:#F7F7FA;
    padding:20rpx 0;
    display:flex;
    justify-content:center;
}
.header-text{

    font-size:32rpx;
}
.page-body{
    display:flex;
    flex:1;
    flex-direction:column;
}
.item{
    display:flex;
    padding:20rpx 40rpx;
    border-bottom:2rpx solid #eee;
}
.item .poster{
    width:128rpx;
    height:128rpx;
    margin-right:20rpx;
}
.item .meta{
    flex:1;
}
.rating{
    color:#FC0000;
}
.title,.subTitle{
    flex:1;
    display:block;
    margin-bottom:10rpx;
}
.title{
    font-size:32rpx;
}
.subTitle{
    font-size:26rpx;
    color:#c0c0c0;
    margin-top:20rpx;
}
.artistsName{
    font-size:26rpx;
        color:#9D9D9E;
}
